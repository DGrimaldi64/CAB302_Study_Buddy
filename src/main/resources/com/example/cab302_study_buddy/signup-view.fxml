<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="300.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302_study_buddy.SignupController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <Label fx:id="messageLabel" text="Sign up">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    <TextField fx:id="usernameField" prefHeight="30.0" prefWidth="250.0" promptText="Enter username" />
    <TextField fx:id="phoneField" prefHeight="30.0" prefWidth="250.0" promptText="Enter Phone number" />
    <Label text="Or">
        <font>
            <Font name="System Italic" size="14.0" />
        </font>
    </Label>
    <TextField fx:id="emailField" prefHeight="30.0" prefWidth="250.0" promptText="Enter email address" />
    <PasswordField fx:id="passwordField" prefHeight="30.0" prefWidth="250.0" promptText="Enter password" />
    <PasswordField fx:id="confirmPasswordField" prefHeight="30.0" prefWidth="250.0" promptText="Confirm password" />
    <Button fx:id="signupButton" onAction="#handleSignup" prefHeight="30.0" prefWidth="200.0" text="Sign up" />
    <Hyperlink fx:id="loginLink" onAction="#switchToLogin" text="Already have an account? Log In" />
</VBox>