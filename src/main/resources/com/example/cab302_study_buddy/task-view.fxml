<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302_study_buddy.TaskController" spacing="10.0">
    <!-- Padding for scene boarders-->
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <!-- HBox for the back button -->
    <HBox spacing="15.0">
        <Button text="←" onAction="#onBackClick" style="-fx-font-size: 14px;"/>
    </HBox>
    <!-- HBox for the task input fields and add button -->
    <HBox spacing="10.0">
        <TextField fx:id="addTaskTextField" promptText="Write your task here..." HBox.hgrow="ALWAYS"/>
        <TextField fx:id="addDurationTextField" promptText="?? Hrs"/>
        <Button fx:id="addButton" mnemonicParsing="false" onAction="#addTask" text="Add"/>
    </HBox>
    <!-- TableView for displaying tasks -->
    <TableView fx:id="taskTableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="taskNameColumn" text="Task Name"/>
            <TableColumn fx:id="expectedTimeColumn" text="Expected Time"/>
            <TableColumn fx:id="currentTimeWorkedColumn" text="Current Time Worked"/>
            <TableColumn fx:id="activeColumn" prefWidth="100" text="Active" />
        </columns>
    </TableView>
    <!-- HBox for update and remove buttons -->
    <HBox spacing="10.0">
        <Button fx:id="updateButton" mnemonicParsing="false" onAction="#showEditTaskDialog" text="Update Task"/>
        <Button fx:id="removeButton" mnemonicParsing="false" onAction="#removeTask" text="Remove Task"/>
    </HBox>
</VBox>