<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302_study_buddy.TaskController" stylesheets="@styles.css">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <HBox spacing="15.0">
            <Button text="←" onAction="#onBackClick"/>
        </HBox>
        <HBox spacing="10.0">
            <children>
                <TextField fx:id="addTaskTextField" promptText="Write your task here..." HBox.hgrow="ALWAYS" />
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#addTask" text="Add" />
            </children>
        </HBox>
        <ListView fx:id="taskListView" VBox.vgrow="ALWAYS" />
        <HBox spacing="10.0">
            <children>
                <Button fx:id="updateButton" mnemonicParsing="false" onAction="#showEditTaskDialog" text="Update Task" />
                <Button fx:id="removeButton" mnemonicParsing="false" onAction="#removeTask" text="Remove Task" />
            </children>
        </HBox>
    </children>
</VBox>
