                <Button text="ðŸžƒ" onAction="#onMinutesDownClick" style="-fx-font-size: 14px;"/>
                <Slider fx:id="minuteSlider" blockIncrement="1" max="59" prefWidth="20" visible="false"/>
            </VBox>
            <VBox spacing="5.0" alignment="CENTER">
                <Button text="ðŸž" onAction="#onSecondsUpClick" style="-fx-font-size: 14px;"/>
