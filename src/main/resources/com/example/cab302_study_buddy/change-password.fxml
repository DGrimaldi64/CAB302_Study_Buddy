<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302_study_buddy.ChangePasswordController" stylesheets="@default.css, @accessibility.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Change Password"/>

    <PasswordField fx:id="currentPasswordField" promptText="Current Password"/>
    <PasswordField fx:id="newPasswordField" promptText="New Password"/>
    <PasswordField fx:id="confirmNewPasswordField" promptText="Confirm New Password"/>

    <Button text="Change Password" onAction="#handleChangePassword"/>
</VBox>