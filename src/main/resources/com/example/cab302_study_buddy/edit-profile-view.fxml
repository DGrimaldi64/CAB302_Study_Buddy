<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302_study_buddy.EditProfileController" stylesheets="@styles.css">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label text="Edit Profile" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
    <TextField fx:id="usernameField" promptText="Username" />
    <TextField fx:id="phoneField" promptText="Phone Number" />
    <TextField fx:id="emailField" promptText="Email" />
    <Button text="Save Changes" onAction="#handleSaveChanges" />
</VBox>