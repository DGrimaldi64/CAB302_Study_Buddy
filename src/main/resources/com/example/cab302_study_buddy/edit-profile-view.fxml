<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import com.example.cab302_study_buddy.EditProfileController?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302_study_buddy.EditProfileController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label text="Edit Profile" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <TextField fx:id="usernameField" promptText="Username" />

        <Label text="Select :" />
        <RadioButton fx:id="phoneOption" text="Use Phone Number" />
        <RadioButton fx:id="emailOption" text="Use Email" />

        <TextField fx:id="contactField" promptText="Enter Phone Number or Email" />

        <Button fx:id="saveButton" text="Save" onAction="#handleSave" />
    </children>
</VBox>
